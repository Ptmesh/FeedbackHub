<%- include('partials/header.ejs') %>

<section class="p-5 mx-auto my-auto">
  <div class="container-fluid p-5">
    <div class="row">
      <div class="col col-9">1</div>
      <div class="col">
        <form action="/login" method="post">
          <div class="mb-3">
            <label for="username" class="form-label">Registerd Mail ID</label>
            <input type="email" name="email" class="form-control" />
          </div>

          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label"
              >Password</label
            >
            <input name="password" type="password" class="form-control" />
          </div>
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" />
            <label class="form-check-label" for="exampleCheck1"
              >Rember Me</label
            >
          </div>
          <button type="submit" class="mx-3 btn btn-primary">Login</button>
          <div class="container mt-3">
            <div class="h6">New here?</div>
            <a href="/register" class="btn btn-light">Register</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

